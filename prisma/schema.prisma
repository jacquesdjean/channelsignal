generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  name          String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  memberships   Membership[]
  uploads       Upload[]
  accounts      Account[]
  sessions      Session[]
}

model Organization {
  id          String       @id @default(cuid())
  name        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  memberships Membership[]
  channels    Channel[]
}

model Membership {
  id             String       @id @default(cuid())
  userId         String
  organizationId String
  role           String       @default("member") // "owner" | "admin" | "member"
  createdAt      DateTime     @default(now())
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
}

model Channel {
  id             String       @id @default(cuid())
  name           String
  bccSlug        String       @unique // e.g., "acme-q4-renewal"
  description    String?
  status         String       @default("active") // "active" | "closed" | "paused"
  organizationId String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  emailEvents    EmailEvent[]
  uploads        Upload[]
}

model EmailEvent {
  id         String   @id @default(cuid())
  channelId  String
  fromAddr   String
  toAddrs    String[] // Postgres array
  ccAddrs    String[]
  subject    String
  bodyStub   String?  // First 500 chars or summary
  rawHeaders Json?
  externalId String?  // Message-ID header for dedup
  timestamp  DateTime
  createdAt  DateTime @default(now())
  channel    Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@index([channelId, timestamp])
}

model Upload {
  id           String   @id @default(cuid())
  channelId    String
  uploadedById String
  filename     String
  mimeType     String
  sizeBytes    Int
  storageKey   String   // Local path in dev, S3 key in prod
  createdAt    DateTime @default(now())
  channel      Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  uploadedBy   User     @relation(fields: [uploadedById], references: [id])

  @@index([channelId])
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
