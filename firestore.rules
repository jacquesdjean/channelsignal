rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get user's organization memberships
    // Note: In production, you'd want to store user-org mappings more efficiently
    function isOrgMember(orgId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/organizations/$(orgId)) &&
        get(/databases/$(database)/documents/organizations/$(orgId))
          .data.members.hasAny([{'userId': request.auth.uid}]);
    }

    // Helper function to check if user is org owner or admin
    function isOrgAdmin(orgId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/organizations/$(orgId)) &&
        (
          get(/databases/$(database)/documents/organizations/$(orgId))
            .data.members.hasAny([{'userId': request.auth.uid, 'role': 'owner'}]) ||
          get(/databases/$(database)/documents/organizations/$(orgId))
            .data.members.hasAny([{'userId': request.auth.uid, 'role': 'admin'}])
        );
    }

    // Organizations collection
    match /organizations/{orgId} {
      // Members can read their own organization
      allow read: if isAuthenticated() &&
        resource.data.members.hasAny([{'userId': request.auth.uid}]);

      // Only admins/owners can update organization
      allow update: if isOrgAdmin(orgId);

      // Authenticated users can create organizations (they become the owner)
      allow create: if isAuthenticated() &&
        request.resource.data.members.size() > 0 &&
        request.resource.data.members[0].userId == request.auth.uid &&
        request.resource.data.members[0].role == 'owner';

      // Only owners can delete organizations
      allow delete: if isAuthenticated() &&
        resource.data.members.hasAny([{'userId': request.auth.uid, 'role': 'owner'}]);
    }

    // BCC address lookup - read-only for authenticated users
    // This allows the email ingestion system to find orgs by BCC address
    match /organizations/{orgId} {
      allow read: if isAuthenticated();
    }

    // Deals collection
    match /deals/{dealId} {
      // Members can read deals from their organization
      allow read: if isAuthenticated() &&
        exists(/databases/$(database)/documents/organizations/$(resource.data.organizationId)) &&
        get(/databases/$(database)/documents/organizations/$(resource.data.organizationId))
          .data.members.hasAny([{'userId': request.auth.uid}]);

      // Members can create deals in their organization
      allow create: if isAuthenticated() &&
        exists(/databases/$(database)/documents/organizations/$(request.resource.data.organizationId)) &&
        get(/databases/$(database)/documents/organizations/$(request.resource.data.organizationId))
          .data.members.hasAny([{'userId': request.auth.uid}]);

      // Members can update deals in their organization
      allow update: if isAuthenticated() &&
        exists(/databases/$(database)/documents/organizations/$(resource.data.organizationId)) &&
        get(/databases/$(database)/documents/organizations/$(resource.data.organizationId))
          .data.members.hasAny([{'userId': request.auth.uid}]) &&
        // Prevent changing the organizationId
        request.resource.data.organizationId == resource.data.organizationId;

      // Only org admins can delete deals
      allow delete: if isOrgAdmin(resource.data.organizationId);
    }
  }
}
